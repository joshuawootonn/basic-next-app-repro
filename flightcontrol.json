{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "website",
          "name": "Website",
          "type": "fargate",
          "buildType": "nixpacks",
          "enableCloudfrontSwr": true,
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 2,
          "maxInstances": 1,
          "buildCommand": "npm run build",
          "startCommand": "npm run start",
          "healthCheckPath": "/health"
        }
      ]
    }
  ]
}
